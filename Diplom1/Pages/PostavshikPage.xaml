<Page x:Class="Diplom1.Pages.PostavshikPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PostavshikPage">

    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>





        <DataGrid Grid.Row="1" Margin="10" Name="DGVPostavshik" IsReadOnly="True" AutoGenerateColumns="False" Background="#272537">
            <DataGrid.Columns>

                <DataGridTextColumn Width="*" Binding="{Binding PostavshikName}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{DynamicResource tb_namep}" FontSize="15"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
              

            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
