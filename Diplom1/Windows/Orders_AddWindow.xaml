<Window x:Class="Diplom1.Windows.Orders_AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom1.Windows"
        mc:Ignorable="d"
        Title="Orders_AddWindow" Height="450" Width="800" FontSize="16">
    <Grid Margin="10,10,10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>

            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Дата:"/>
            <DatePicker Name="dtpDate"/>
            <TextBlock Text="Клиенты:"/>
            <ComboBox Name="cmbClients" SelectedItem="{Binding KlientiKlient}"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Товары:"/>
                <ComboBox Name="cmbTovars"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="3,0,0,0">
                <TextBlock Text="Кол-во:"/>
                <TextBox Name="tbTovarsCount" Text="1"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,5">
            <Button Content="Добавить товар" Name="btnPlus" Click="btnPlus_Click" Width="200" HorizontalAlignment="Right" FontSize="14"/>
            <Button Content="Удалить товар" Margin="10,0,0,0" Name="btnMinus" Click="btnMinus_Click" Width="200" HorizontalAlignment="Right" FontSize="14"/>
        </StackPanel>
        
        <DataGrid Grid.Row="3" Background="transparent" BorderBrush="Black" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" Name="dgvTovars" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id товара" Binding="{Binding TovarId}"/>
                <DataGridTextColumn Header="Название" Width="*" Binding="{Binding NaimTov}"/>
                <DataGridTextColumn Header="Цена" Width="150" Binding="{Binding CenaEdinica}"/>
                <DataGridTextColumn Header="Кол-во" Width="100" Binding="{Binding TovarsCount}"/>
            </DataGrid.Columns>


        </DataGrid>
        <Button Grid.Row="4" Content="Сохранить изменения" Margin="10,5,0,0" Name="btnSave" Click="btnSave_Click" Width="250" HorizontalAlignment="Right"/>
    </Grid>
</Window>
